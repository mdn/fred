{
  "compilerOptions": {
    // general options:
    "allowJs": true,
    "checkJs": true,
    "maxNodeModuleJsDepth": 0,
    "noEmit": true,
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    // fix for badly-formed types in dependencies:
    "skipLibCheck": true,
    // alias for imports:
    "paths": {
      "types/*": ["./types/*"]
    },
    // rules:
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": ["node_modules", "dist", "legacy", "vendor"]
}
